<view class="container">
  <block wx:if="{{order.payment == 'wechat'}}">
  <view class="box">  
    <view class="line big msg">请您在<em>24</em>小时内完成支付，否则{{ordername}}会自动取消。</view>
    <view class="line">
      <view class="label">{{ordername}}编号</view>
      <view class="info">
        <view class="inner">{{order.ordersn}}</view>
      </view>
    </view>
    <view class="line">
      <view class="label">支付金额</view>
      <view class="info">
        <view class="inner">
          <view style='color:#ff6600'><span id="orderprice">{{order.realprice}}</span>元</view>
        </view>
      </view>
    </view>
   </view>  
  <button type="primary" class="paybtn" bindtap="pay">微信支付</button>
  <button type="default" bindtap="buy" class="gl-button">重新下单</button>
  </block>
  <block wx:if="{{order.payment == 'offline'}}">
    <view class="box">  
      <view class="line big msg">您选择的支付方式：<em>线下支付</em></view>
      <view class="content">
        {{order.offline_desc}}
      </view>
    </view>
  </block>
</view>

