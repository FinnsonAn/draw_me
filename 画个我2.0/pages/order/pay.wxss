.container{
  width: 100%; height:100vh; background: #eee; padding-top:10px;
}
.box {
  height:auto; border-bottom:1px solid #f0f0f0; border-top:1px solid #f0f0f0; 
  background:#fff;  display:bable; 
}
.box .big{ 
  font-size:14px;
}
.box .alert{ 
  display:table; height:auto;
}
.box .content{
  display:table; height:auto; padding-top: 20px; padding-bottom: 20px;
   font-size: 14px; width: 96%; margin: 0 auto; 
}
.box .line {
  height:44px; margin:0 5px; border-bottom:1px solid #f0f0f0; 
  line-height:44px;
}
.box .line em{  
  color: #F00
}
.box .line .label { 
  float:left;width:80px;
}
.box .line .info { 
  float:right; width:100%; margin-left:-85px;
  text-align: right;overflow:hidden;height:44px;
}
.box .line .info .inner { 
  color:#666;margin-left:85px;
}
.box .tip { 
  color:#666; line-height:20px; padding:5px;
  font-size:13px; 
}
.box .line .nav {
  height:22px; width:40px; background:#ccc; 
  margin:10px 0px; float:right; border-radius:40px;
}
.box .line .on {
  background:#4ad966;
}
.box .line .nav nav {
  height:20px; width:20px; background:#fff; 
  margin:1px; border-radius:20px;
}
.box .line .nav .on {
  margin-left:19px;
}
.paybtn {
  height:44px; margin:14px 5px; background: #4ad966; 
 text-align:center; font-size:16px; 
  line-height:44px; color:#fff;
}
.gl-button{
  height:44px; margin:14px 5px;  text-align:center; font-size:16px; 
  line-height:44px; 
}