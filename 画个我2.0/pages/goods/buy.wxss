/* pages/goods/buy.wxss */
.shop_top{
  width: 100%;height: auto;display: table;background-color: #fff;padding: 20px 0;
}
.shop_top image{
  float: left;margin-left: 30rpx;width: 250rpx;height: 250rpx;
}
.shop_top .title{
  float: left;margin-left: 40rpx;width: 400rpx;
}
.shop_top .title text{
  display: block;font-size: 16px;font-weight: bold;color: #333;line-height: 80rpx;margin-top: 65rpx;
}
.shop_top .title span{
  display: block;font-size: 12px;color: #999;line-height: 40rpx;
}
.size_box{
  width: 100%;height: auto;background-color: #fff;padding: 20px 0;
}
.size_box span{
  display: block;margin-left: 30rpx;font-size: 14px;font-weight: bold;color: #333;line-height: 50px;
}
.size_box .size {
  width: 100%;height: auto;display: table;
}
.size_box .size text{
  float: left;margin-left: 30rpx;width: 280rpx;height: 100rpx;border: 1px solid #ddd;line-height: 100rpx;text-align: center;font-size: 14px;color: #777;font-weight: bold;
}
.size_box .size text.select{
  background-color: #fccf10;color: #fff;
} 
.up_load{
  width: 100%;height: auto;background-color: #fff;padding-bottom: 20px;
}
.up_load text{
  display: block;margin-left: 30rpx;font-size: 14px;font-weight: bold;color: #333;line-height: 50px;
} 
.up_img{
  width: 250rpx;height: 250rpx;margin-left: 30rpx;border: 1px solid #eee;
}
.up_load .up_img image{
  width: 250rpx;height: 250rpx;
}
.bz{
  width: 100%;height: 50px;line-height: 50px;background-color: #fff;
}
.bz text{
  float: left;margin-left: 30rpx;font-size: 14px;font-weight: bold;color: #333;
}
.bz .in_put{
  float: right;border: 1px solid #eee;width: 65%;height: 38px;margin-top: 5px;margin-right: 30rpx;
}
.bz .in_put input{
  width: 90%;height: 38px;margin: 0 auto;line-height: 38px;font-size: 14px;
}
.phone{
  width: 100%;height: 50px;line-height: 50px;background-color: #fff;
}
.phone text{
  float: left;margin-left: 30rpx;font-size: 14px;font-weight: bold;color: #333;
}
.phone .number{
  float: right;width: 65%;height: 38px;margin-top: 5px;margin-right: 30rpx;
}
.phone .number input{
  width: 100%;height: 38px;margin: 0 auto;line-height: 38px;text-align: right;font-size: 14px;
}
.bottom_box{
  width: 100%;height: 55px;border-top: 1px solid #eee;background-color: #fff;font-size: 16px;font-weight: bold;position: fixed;bottom: 0;z-index: 99999;
}
.bottom_box .price{
  float: left;margin-left: 30rpx;line-height: 55px;color: #fa3d59;
}
.bottom_box .pay{
  float: right;width: 40%;height: 55px;line-height: 55px;text-align: center;background-color: #7344dc; color: #fff;
}
.kg{
  width: 100%;height: 56px;
}